<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wangx.teachingassistantTeacher.ui.AddNoticeActivity">
    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="公告"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#424242"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="公告标题:"/>
        <EditText
            android:id="@+id/et_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写公告标题"
            android:textColorHint="#424242" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#424242"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:text="选择课程：" />
        <Spinner
            android:id="@+id/sort_by_course"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#424242"/>
    <EditText
        android:id="@+id/et_notice_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="请填写公告正文"
        android:textColorHint="#424242"
        android:shadowColor="#424242"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:background="@android:drawable/edit_text"/>
    <Button
        android:id="@+id/bt_notice_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布"
        android:textColor="#ffffff"
        android:background="#424242"/>
</LinearLayout>
