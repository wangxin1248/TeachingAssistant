<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"

    tools:context="com.example.wangx.teachingassistantTeacher.ui.GradeActivity">
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="55dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_grade_addgrade"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:scaleType="centerInside"
                android:background="#ffffff"
                android:src="@drawable/ic_note_add_black_48dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="录入成绩"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:background="#424242"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="55dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ib_grade_checkgrade"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:scaleType="centerInside"
                android:background="#ffffff"
                android:src="@drawable/ic_find_in_page_black_48dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="查看成绩"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#424242">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="18sp"
            android:text="注意事项："
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:lineSpacingExtra="10dp"
            android:text="1.录入成绩可以对以前的成绩进行修改\n2.录入成绩同时系统后台会计算出考勤成绩一同录入\n3.查看成绩功能支持一键导出，导出类型为Excel，路径为teachingassistant目录下\n"
            />
    </LinearLayout>
</LinearLayout>