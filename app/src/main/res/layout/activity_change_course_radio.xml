<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wangx.teachingassistantTeacher.ui.ChangeCourseRadioActivity">
    <!--课程权重设置-->
    <LinearLayout
        android:id="@+id/layout_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <!--课程介绍-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <!--课程名-->
                <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#424242"/>
            </LinearLayout>
        </LinearLayout>
        <!--作业成绩比重-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="作业成绩比重:" />

            <EditText
                android:id="@+id/et_workratio"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:digits="0123456789." />
        </LinearLayout>
        <!--实验成绩比重-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="实验成绩比重:" />

            <EditText
                android:id="@+id/et_testratio"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:digits="0123456789." />
        </LinearLayout>
        <!--考试成绩比重-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="考试成绩比重:" />

            <EditText
                android:id="@+id/et_examratio"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789." />

        </LinearLayout>
        <!--考勤成绩比重-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="考勤成绩比重:" />

            <EditText
                android:id="@+id/et_kaoqinratio"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789." />

        </LinearLayout>
        <!--修改按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_agrade_ratio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#424242"
                android:textColor="#ffffff"
                android:text="修改" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
